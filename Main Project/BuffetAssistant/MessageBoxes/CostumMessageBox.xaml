<Window x:Class="BuffetAssistant.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcon="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BuffetAssistant"
        mc:Ignorable="d"
        Title="Window1" Height="230" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}"  Width="414.997">

    <!--messageBox ui codes-->
    <Grid Name="mainGrid">
        <Border CornerRadius="25" BorderBrush="White" BorderThickness="0.7" Background="White"/>

        <Grid Name="controlArea" MouseDown="controlArea_MouseDown" Margin="0,0,-0.2,195" Background="Transparent">
            <Border CornerRadius="20,0,0,0" BorderBrush="Transparent" BorderThickness="0.7" Background="#FFF0F0F0" Margin="-1,-1,19,0"/>
        </Grid>


        <Button Name="btnClose" Click="btnClose_Click" Style="{StaticResource closeBTNMessageBox}"  Margin="340,-1,-0.2,195" Background="#FFFE5454">
            <Button.Content>
                <materialIcon:PackIcon Kind="Close" Height="35" Width="38" Foreground="White"/>
            </Button.Content>
        </Button>
    </Grid>
</Window>
