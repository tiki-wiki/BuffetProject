<Application x:Class="BuffetAssistant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BuffetAssistant"
             StartupUri="MainWindow.xaml">
    <Application.Resources>


        <!--All App Styles-->
        <ResourceDictionary>

            <!--main window backgound-->
            <BitmapImage x:Key="MainwindowBackground" UriSource="Images\MainWindowBackground.jpeg"/>

            <!--main window styles-->

            <Style x:Key="mainButtonColor" TargetType="Button">
                <Style.Setters>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush>
                                <GradientStop Color="Green" Offset="0.1"/>
                                <GradientStop Color="White" Offset="1.2"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Width" Value="160"/>
                    <Setter Property="Height" Value="85"/>
                </Style.Setters>
            </Style>
            <Style x:Key="mainButtonStyle" TargetType="Border" BasedOn="{StaticResource mainButtonColor}">
                <Setter Property="CornerRadius" Value="750"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
