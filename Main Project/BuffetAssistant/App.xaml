<Application x:Class="BuffetAssistant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BuffetAssistant"
             StartupUri="MainWindow.xaml">
    <Application.Resources>


        <!--All App Styles-->
        <ResourceDictionary>

            <!--main window backgound-->
            <BitmapImage x:Key="MainwindowBackground" UriSource="Images\MainWindowBackground.jpeg"/>

            <Style x:Key="mainWindoButtons" TargetType="Button">
                <Style.Setters>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                                <GradientStop Color="Transparent" Offset="0.2"/>
                                <GradientStop Color="White" Offset="1.6"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Width" Value="150"/>
                    <Setter Property="Height" Value="85"/>
                </Style.Setters>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
