<Application x:Class="BuffetAssistant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BuffetAssistant"
             StartupUri="MainWindow.xaml">
    <Application.Resources>


        <!--All App Styles-->
        <ResourceDictionary>

            <!--main window backgound-->
            <BitmapImage x:Key="MainwindowBackground" UriSource="Images\MainWindowBackground.jpeg"/>

            
            <Style x:Key="buttonColor" TargetType="Button">
                <Style.Setters>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush>
                                <GradientStop Color="Green" Offset="0.1"/>
                                <GradientStop Color="Green" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Style.Setters>
            </Style>

            <Style x:Key="borderButton" TargetType="Border">
                <Style.Setters>
                    <Setter Property="CornerRadius" Value="750"/>
                </Style.Setters>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
