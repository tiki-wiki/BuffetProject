<Window x:Class="BuffetAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuffetAssistant"
        xmlns:materialIcon="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" MouseDown="Drag" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" Height="562.1" Width="957.4" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="{StaticResource MainwindowBackground}" Opacity="0.8"/>
    </Window.Background>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommandHandler"/>
    </Window.CommandBindings>

    <Grid Name="mainGrid" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Controls-->
        <StackPanel Margin="0,0,-0.2,0.2">
            <TextBlock Style="{StaticResource appNameStyle}" Text="بوفه یار" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Margin="0,122,-0.2,62.2" VerticalAlignment="Center" Height="373">

            <!--big buttons-->
            <Button x:Name="orderBTN" Click="orderBTN_Click" Margin="60,15,10,10" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <StaticResource ResourceKey="mainWindowButtons"/>
                </Button.Style>
                <StackPanel Orientation="Horizontal" Height="56">
                    <Image Source="{StaticResource orderIcon}" Height="51" Width="73"/>
                    <TextBlock Text="ثبت سفارش" Height="49" Margin="10,15,10,10" TextAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="reportBTN"  Margin="60,15,10,10" Click="ReportBTN_Click" VerticalAlignment="Center"  HorizontalAlignment="Left" >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <StaticResource ResourceKey="mainWindowButtons"/>
                </Button.Style>
                <StackPanel Orientation="Horizontal" Height="42">
                    <Image Source="{StaticResource reportIcon}" Height="41" Width="81" />
                    <TextBlock Text="گزارش مالی" Margin="10,6,10,0" TextAlignment="Center" />
                </StackPanel>
            </Button>

            <Button x:Name="storeBTN"  Margin="60,15,10,10" VerticalAlignment="Center"  HorizontalAlignment="Left">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <StaticResource ResourceKey="mainWindowButtons"/>
                </Button.Style>
                <StackPanel Orientation="Horizontal" Height="42">
                    <Image Source="{StaticResource storeIcon}" Height="41" Width="81" />
                    <TextBlock Text="انبار" Width="88" Margin="0,6,10,0" TextAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="manageBTN" Margin="60,15,0,0" VerticalAlignment="Center"  HorizontalAlignment="Left">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <StaticResource ResourceKey="mainWindowButtons"/>
                </Button.Style>
                <StackPanel Orientation="Horizontal" Height="42">
                    <Image Source="{StaticResource manageIcon}" Width="39"  />
                    <TextBlock Text="مدیریت" Width="88" Margin="10,8,10,0" TextAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <Button Margin="0,10,19.8,0"
                         Background="Transparent" Command="ApplicationCommands.Close"  x:Name="closeBTN" BorderThickness="0" Height="40" Width="40" HorizontalAlignment="Right" VerticalAlignment="Top">
            <materialIcon:PackIcon  Kind="CloseBox" Foreground="White" Background="Transparent" FontSize="100" Height="30" Width="30"/>
        </Button>

        <Button Margin="0,10,79.8,0"
                         Background="Transparent" Click="minimizeBTN_Click"  x:Name="minimizeBTN" BorderThickness="0"  Height="35" Width="50" VerticalAlignment="Top" HorizontalAlignment="Right">
            <materialIcon:PackIcon  Kind="WindowMinimize" Foreground="White" Background="Transparent" FontSize="100" Height="35" Width="50"/>
        </Button>
        <StackPanel Margin="0,0,-0.2,0.2" VerticalAlignment="Bottom">
            <Button Background="Transparent" Click="settingBTN_Click" x:Name="settingBTN" BorderThickness="0"  HorizontalAlignment="Left" Margin="30">

                <Button.BitmapEffect>
                    <DropShadowBitmapEffect ShadowDepth="6" Softness="1" Opacity="0.4" Color="Black"/>
                </Button.BitmapEffect>
                <materialIcon:PackIcon  Kind="Settings" Foreground="White" Background="Transparent" FontSize="100" Height="29" Width="32"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
