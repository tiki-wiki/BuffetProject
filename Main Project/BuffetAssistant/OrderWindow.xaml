<Window x:Class="BuffetAssistant.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuffetAssistant"
        mc:Ignorable="d"
        Title="OrderWindow" Height="488.4" Width="489.6" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Grid>
        <StackPanel Margin="0,351,0.2,-0.4" Orientation="Horizontal">
            <Button Style="{StaticResource orderWindowBTN}" Name="normalOrderBTN"  Foreground="White" Margin="50,10,0,10">
            <Button.Content>
                <TextBlock Text="سفارش عادی" Height="26" TextAlignment="Center"/>
            </Button.Content>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Style="{StaticResource orderWindowBTN}" Name="specialOrderBTN" Foreground="White" Margin="20,10,10,10">
            <Button.Content>
                <TextBlock Text="سفارش ویژه" Height="26" TextAlignment="Center"/>
            </Button.Content>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        </StackPanel>
    </Grid>
</Window>
